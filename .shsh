function mkidx {
    cd $1
    ######    ############################## YEAR
    printf -- '---\nlayout: "layout"\n---\n# 2024\n'      >  index.md
    for II in $(ls) ; do
        [ "$II" == "index.md" ] && continue
        [ -f $II ] && echo "* [$II]($II)"       >> index.md
        [ -d $II ] && echo "* [$II]($II/)"      >> index.md
        [ -d $II ] && $(mkidx $II)
    done

    cd ..
}

README="00-README-ls-alR"
cat > ${README}.md << EOF
---
layout: "layout"
---

<br>
# 2024
\`\`\`
EOF
ls -R >> ${README}.md
cat   >> ${README}.md << EOF
\`\`\`
EOF


for II in \
    ${README}.md  \
    45UUD         \
    IDX           \
    INPRES        \
    KEPDIRJEN     \
    KEPMEN        \
    KEPMENKO      \
    KEPSESMENKO   \
    KEPPRES       \
    MK            \
    MPR           \
    PERPRES       \
    PERDA         \
    PERKA         \
    PERMEN        \
    PERMENKO      \
    PERPU         \
    PNPS          \
    PP            \
    SKB           \
    UI            \
    UU            \
; do
    [ -d $II ] && mkidx $II
done

exit 0

